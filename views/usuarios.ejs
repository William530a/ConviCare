<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gestión de Usuarios</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/styles.css">

</head>
<body class="bg-light">

    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="/dashboard">ConviCare</a>
            <div class="d-flex justify-content-end mt-3">
                <div class="card shadow col-md-20 mb-3 p-1 text-center" style="background: none; border: none;">
                    <a href="/logout" class="btn btn-danger">Cerrar Sesión</a>
                </div>
            </div>
        </div>
    </nav>

    <div class="container mt-5">
        <h2 class="text-center">Gestión de Usuarios</h2>

        <!-- Botón para agregar usuario -->
        <div class="d-flex justify-content-end mt-3">
            <div class="card shadow col-md-2 mb-3 p-0 text-center" style="background: none; border: none;">
                <a href="/usuarios/nuevo" class="btn btn-primary">Agregar usuario</a>
            </div>
        </div>
        

        <table class="table table-bordered table-hover">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Email</th>
                    <th>Rol</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                <% usuarios.forEach(usuario => { %>
                    <tr>
                        <td><%= usuario.id %></td>
                        <td><%= usuario.nombre %></td>
                        <td><%= usuario.email %></td>
                        <td><%= usuario.rol %></td>
                        <td class="text-center">
                            <div class="d-inline-block card shadow p-0 mx-1" style="background: none; border: none;">
                                <a href="/usuarios/editar/<%= usuario.id %>" class="btn btn-primary btn-sm">Editar</a>
                            </div>
                        
                            <div class="d-inline-block card shadow p-0 mx-1" style="background: none; border: none;">
                                <form action="/usuarios/eliminar/<%= usuario.id %>" method="POST" class="d-inline">
                                    <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('¿Estás seguro?')">Eliminar</button>
                                </form>
                            </div>
                        </td>                                               
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>

    <!-- Botón para volver -->
    <div class="row justify-content-center mt-3">
        <div class="card shadow col-md-1 mb-3 p-0 mx-2 text-center" style="background: none; border: none;">
            <a href="/dashboard" class="btn btn-primary">Volver</a>
        </div>
    </div>


</body>
</html>

<%- include('partials/footer') %>